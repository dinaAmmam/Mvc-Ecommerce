@model IEnumerable<Repoteq_task.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<div class="card-container w-100 pt-3">
    <div class="container">
        <h1 class="text-primary fw-bold text-center">Product</h1>
        <div class="row mt-3 mb-5">
            <div class="col-lg-3 col-md-6">
                <div class="mb-4">
                    <label class="form-label text-primary fs-5" for="name">Name</label>
                    <input type="text" class="form-control form-control-sm" id="name">
                </div>
            </div>
            <div class="col-lg-6 ">
                <div class="row">
                    <div class="col-6">
                        <div class="mb-4">
                            <label class="form-label text-primary fs-5" for="name">Date from :</label>
                            <input type="date" class="form-control form-control-sm " id="name">
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="mb-4">
                            <label class="form-label text-primary fs-5" for="name">Date to :</label>
                            <input type="date" class="form-control form-control-sm" id="name">
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-3  ">
                <div class="d-flex mt-4 pt-3">
                    <button class="btn btn-sm  btn-primary w-100 me-2">
                        Search
                    </button>
                    <a asp-action="Create" class="btn btn-sm  btn-primary w-100">
                        Add New Product
                    </a>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(model => model.ProductId)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Image)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Price)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Date)</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
             
                        <tr>
                            <th scope="row">@Html.DisplayFor(modelItem => item.ProductId)</th>
                            <td>
                                <div class="img-table">
                                    <img src="@item.Image" alt="Product Image" width="150" height="150" />
                                </div>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td>
                                <div class="d-flex flex-row align-items-center flex-wrap justify-content-center w-fit-content div-button">
                                    <button class="border border-0 mt-1">
                                        <img src="img/edit.png" alt="" class="img-edit" />
                                        <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                                    </button>
                                    <button class="border border-0 mt-1">
                                        <img src="img/delete.png" alt="" class="img-edit" />
                                        <a asp-action="Delete" onclick="return confirm('are you sure ??')" asp-route-id="@item.ProductId">Delete</a>
                                    </button>
                                </div>
                            </td>

                        </tr>
                    }


                </tbody>

            </table>


        </div>
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

</div>